<div class="navbar bg-base-100">
    <div class="flex-none">
        <button class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                class="inline-block h-5 w-5 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16">
                </path>
            </svg>
        </button>
    </div>
    <div class="flex-1">
        <a class="btn btn-ghost text-xl">Inventory Management</a>
    </div>
    <div class="flex-none">
        <button class="btn btn-ghost" onclick="modal_login.showModal()">Login</button>
    </div>
</div>

<dialog id="modal_login" class="modal">
    <div class="modal-box w-[400px]">
        <div role="tablist" class="tabs tabs-lifted font-bold">
            <a id="btn-tab-sign-in" role="tab" class="tab tab-active">Sign In</a>
            <a id="btn-tab-sign-up" role="tab" class="tab ">Sign Up</a>
        </div>

        <div class="tabcontent mt-8">
            <div id="tab-sign-in">
                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Username or Email" class="grow" />
                </label>

                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Password" class="grow" />
                </label>

                <div class="flex justify-center">
                    <button id="btn-sign-in" class="btn btn-primary w-32 text-white">Sign In</button>
                </div>
            </div>

            <div id="tab-sign-up" class="hidden">
                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="text" placeholder="Email" class="grow" />
                </label>

                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" placeholder="Username" class="grow" />
                </label>

                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-key"></i>
                    <input type="text" placeholder="Password" class="grow" />
                </label>

                <label class="input input-bordered flex items-center gap-2 mb-4">
                    <i class="fa-solid fa-key"></i>
                    <input type="text" placeholder="Confirm Password" class="grow" />
                </label>

                <div class="flex justify-center">
                    <button class="btn btn-primary w-32 text-white">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>